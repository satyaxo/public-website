extends layout

block content
  .row.page-header
    .col-lg-12
      h1 Add Task
  .row
    .col-xs-12.col-md-6
      form.form-horizontal(action="/", method="get", role="form")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="date") Date
          .col-xs-12.col-sm-10
            input#name.form-control(name="date")
        .form-group
          label.col-sm-2.control-label(for="task") Task
          .col-sm-10
            textarea#review.form-control(name="review", rows="5")
        button.btn.btn-default.pull-right Add my Task
    .col-xs-12.col-md-4